# TaskFlow Environment Variables Template
# Copy this file to .env and fill in the appropriate values for your environment

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Server Port
BACKEND_PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskflow_db
DB_USER=taskflow_user
DB_PASSWORD=your_secure_password_here

# Database URL (if using connection string)
# DATABASE_URL=postgresql://taskflow_user:password@localhost:5432/taskflow_db

# API Configuration
API_URL=http://localhost:5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@taskflow.com

# AWS Configuration (if using S3 or other AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=taskflow-bucket

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Third-party API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# React/Next.js Environment
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENV=development

# Frontend Port (if needed)
FRONTEND_PORT=3000

# API Endpoints
REACT_APP_API_ENDPOINT=/api/v1
REACT_APP_AUTH_ENDPOINT=/auth

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# Google Analytics (if using)
REACT_APP_GA_ID=your_google_analytics_id_here

# Sentry Configuration (if using error tracking)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# App Configuration
REACT_APP_APP_NAME=TaskFlow
REACT_APP_VERSION=1.0.0

# Session Configuration
REACT_APP_SESSION_TIMEOUT=3600000

# ============================================
# COMMON/SHARED CONFIGURATION
# ============================================

# Environment
ENVIRONMENT=development

# App Name and Version
APP_NAME=TaskFlow
APP_VERSION=1.0.0

# Timezone
TIMEZONE=UTC

# ============================================
# NOTES:
# ============================================
# - Never commit the actual .env file with real secrets to version control
# - Only commit the .env.example file as a template
# - For production, use secure secret management tools (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Make sure to update values based on your actual environment setup
# - Refer to the project documentation for detailed configuration instructions
